{% extends 'base.html.twig' %}

{% block title %}Connexion - TomTroc{% endblock %}
{% block body_id %}login{% endblock %}

{% block main %}
<div class="login-background">
    <div class="login-wrapper shadow-lg rounded p-4">
        <div class="text-center mb-4">
            <img src="{{ asset('images/logo-tomtroc.svg') }}" alt="TomTroc" height="48">
            <h2 class="mt-2">Se connecter à TomTroc</h2>
        </div>

        {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post" {{ stimulus_controller('login') }}>
            <div class="mb-3">
                <label for="username" class="form-label">Email</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required autofocus class="form-control" {{ stimulus_target('login', 'username') }}>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Mot de passe</label>
                <div class="input-group">
                    <input type="password" id="password" name="_password" required class="form-control" {{ stimulus_target('login', 'password') }}>
                    <button type="button" class="btn btn-outline-secondary" {{ stimulus_action('login', 'togglePasswordInputType') }}>
                        <twig:ux:icon name="tabler:eye" />
                    </button>
                </div>
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me" checked>
                <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
            </div>

            <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn btn-success w-100">
                <twig:ux:icon name="tabler:login"/> Se connecter
            </button>

            <p class="text-center mt-3">
                <a href="{{ path('app_register') }}">Pas encore inscrit ? Créez un compte</a>
            </p>
        </form>
    </div>
</div>
{% endblock %}
