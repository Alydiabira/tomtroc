{% extends 'base.html.twig' %}

{% block title %}Modifier le livre{% endblock %}

{% block main %}
<div class="container mt-5">
    <h1 class="h4 mb-4 text-center">‚úèÔ∏è Modifier les informations</h1>

    <div class="row">
        <!-- üìï Image √† gauche -->
        <div class="col-md-5 text-center">
            {% if book.coverImage %}
                <img src="{{ asset('images/' ~ book.coverImage) }}" class="img-fluid rounded-4 shadow-sm mb-3" alt="{{ book.title }}">
            {% else %}
                <img src="{{ asset('images/default-book.jpg') }}" class="img-fluid rounded-4 shadow-sm mb-3" alt="Livre">
            {% endif %}

            <a href="{{ path('book_edit', {id: book.id}) }}" class="btn btn-outline-secondary rounded-pill">üñº Modifier la photo</a>
        </div>

        <!-- ‚úèÔ∏è Formulaire √† droite -->
        <div class="col-md-7">
            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control rounded-3'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.author) }}
                    {{ form_widget(form.author, {'attr': {'class': 'form-control rounded-3'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control rounded-3', 'rows': 4}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.available) }}
                    {{ form_widget(form.available, {'attr': {'class': 'form-check-input'}}) }}
                </div>
                <button class="btn btn-success rounded-pill">‚úÖ Valider</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
