{% extends 'base.html.twig' %}
{% block body_id 'user_account' %}

{% block main %}
<div class="container mt-5 d-flex justify-content-center">
    <div class="w-100" style="max-width: 960px;">
        <div class="row gy-4 justify-content-center">
            <!-- üßë‚Äçüíº Profil utilisateur -->
            <div class="col-md-4">
                <div class="card p-4 shadow-sm rounded-4 text-center">
                    <div class="d-flex justify-content-center">
                        {% if user.avatar %}
                            <img src="{{ asset('uploads/' ~ user.avatar) }}" alt="Avatar de {{ user.username }}" class="rounded-circle mb-3 shadow avatar-img" width="120" height="120">
                        {% else %}
                            <img src="{{ asset('images/default-avatar.png') }}" alt="Avatar par d√©faut" class="rounded-circle mb-3 shadow avatar-img" width="120" height="120">
                        {% endif %}
                    </div>

                    <a href="#" onclick="document.getElementById('avatar-upload').click()" class="btn btn-sm btn-outline-secondary rounded-pill mb-3">Modifier</a>

                    <form method="POST" action="{{ path('user_avatar') }}" enctype="multipart/form-data" style="display: none;">
                        <input type="file" name="avatar" id="avatar-upload" onchange="this.form.submit()">
                    </form>


                    {# {% if user.availability %}
                        <div class="mb-2">
                            <i class="bi bi-calendar-event-fill text-primary me-2"></i>
                            <span class="badge 
                                {% if user.availability == 'Tous les jours' %}
                                    bg-success
                                {% elseif user.availability == 'Week-end uniquement' %}
                                    bg-warning text-dark
                                {% elseif user.availability == 'Soirs en semaine' %}
                                    bg-info text-dark
                                {% else %}
                                    bg-secondary
                                {% endif %}
                            " data-bs-toggle="tooltip" title="Disponible pour √©changer üìö">
                                {{ user.availability }}
                            </span>
                        </div>
                    {% endif %} #}

                    <hr>
                    <h4 class="fw-semibold">{{ user.pseudo }}</h4>
                    <p class="text-muted small">Membre depuis {{ user.createdAt|date('Y') }}</p>
                    <p class="fw-bold mb-1">üìö Biblioth√®que</p>
                    <p class="text-muted">{{ user.books|length }} livre{{ user.books|length > 1 ? 's' : '' }}</p>
                    <a href="{{ path('user_books') }}" class="btn btn-outline-primary rounded-pill w-100 mb-2">Voir mes livres</a>

                    {% if app.user and app.user.id != user.id %}
                        <a href="{{ path('start_conversation', {id: user.id}) }}" class="btn btn-primary rounded-pill w-100">
                            <twig:ux:icon name="tabler:message"/> Envoyer un message
                        </a>
                    {% endif %}
                </div>
            </div>

            <!-- üìù Formulaire d'√©dition -->
            <div class="col-md-8">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body px-4 py-4">
                        <h2 class="h5 mb-4 text-center">Vos informations personnelles</h2>

                        {{ form_start(form) }}
                            <div class="row g-3">
                                <div class="col-md-6">
                                    {{ form_row(form.email, {'attr': {'class': 'form-control rounded-pill'}}) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.pseudo, {'attr': {'class': 'form-control rounded-pill'}}) }}
                                </div>
                            </div>
                                                    <a href="{{ path('user_change_password') }}" class="btn btn-outline-danger w-100 rounded-pill mt-3">üîê Changer mon mot de passe</a>


                            <button class="btn btn-success w-100 rounded-pill mt-4">üíæ Enregistrer</button>
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>

        <!-- üìö Mes livres disponibles -->
        <div class="row mt-5 justify-content-center">
            <div class="col-12">
                <h2 class="h5 mb-4 text-center">üìö Mes livres disponibles</h2>

                {% if user.books|length > 0 %}
                    <table class="table table-hover align-middle rounded-4 overflow-hidden">
                        <thead class="table-light">
                            <tr>
                                <th>üì∑ Photo</th>
                                <th>üìñ Titre</th>
                                <th>üë§ Auteur</th>
                                <th>üìù Description</th>
                                <th>üì¶ Disponibilit√©</th>
                                <th class="text-end">‚öôÔ∏è Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for book in user.books %}
                                <tr>
                                    <!-- PHOTO -->

                                    <td>
                                        <a href="{{ path('book_show', {id: book.id}) }}" class="btn btn-sm btn-outline-primary rounded-pill">
                                        {% if book.coverImage %}
                                            <img src="{{ asset('uploads/covers/' ~ book.coverImage) }}" alt="{{ book.title }}" width="48" height="64" class="rounded shadow-sm">
                                        {% else %}
                                            <img src="{{ asset('images/default-book.jpg') }}" alt="Livre" width="48" height="64" class="rounded shadow-sm">
                                        {% endif %}
                                        </a>
                                    </td>
                                  

                                    <!-- TITRE -->
                                    <td>{{ book.title }}</td>

                                    <!-- AUTEUR -->
                                    <td>{{ book.author }}</td>

                                    <!-- DESCRIPTION -->
                                    <td class="text-truncate" style="max-width: 250px;">
                                        {{ book.description|length > 120 ? book.description|slice(0, 120) ~ '‚Ä¶' : book.description }}
                                    </td>

                                    <!-- DISPONIBILIT√â -->
                                    <td>
                                        <span class="badge {% if book.available %}bg-success{% else %}bg-danger{% endif %}">
                                            {{ book.available ? 'Disponible' : 'Non disponible' }}
                                        </span>
                                    </td>

                                    <!-- ACTION -->
                                    <td class="text-end">
                                        {% if app.user and app.user.id == user.id %}
                                        <div class="d-inline-flex gap-2">
                                            <a href="{{ path('book_edit', {id: book.id}) }}" class="btn btn-sm btn-outline-secondary rounded-pill">√âditer</a>
                                            <a href="{{ path('book_delete', {id: book.id}) }}" class="btn btn-sm btn-outline-danger rounded-pill">Supprimer</a>
                                        </div>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p class="text-muted text-center">Aucun livre ajout√© pour le moment.</p>
                {% endif %}

            </div>
        </div>
    </div>
</div>
{% endblock %}
