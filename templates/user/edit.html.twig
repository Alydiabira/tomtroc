{% extends 'base.html.twig' %}
{% block body_id 'user_account' %}

{% block main %}
<div class="container mt-5">
    <div class="row">
        <!-- Profil à gauche -->
        <div class="col-md-4 text-center">
            <div class="card p-4 shadow rounded-4">
                <img src="{{ asset('uploads/' ~ user.avatar|default('default.jpg')) }}" class="rounded-circle mb-3" width="120" height="120" alt="Avatar">
                
                <form method="POST" action="{{ path('user_avatar') }}" enctype="multipart/form-data">
                    <input type="file" name="avatar" class="form-control mb-2">
                    <button class="btn btn-sm btn-outline-secondary rounded-pill">modifier</button>
                </form>

                <h4 class="mt-3">{{ user.pseudo }}</h4>
                <p class="text-muted">Membre depuis {{ user.createdAt|date('Y') }}</p>
                <hr>
                <p class="fw-bold">BIBLIOTHÈQUE</p>
                <p>{{ user.books|length }} livres</p>
                <a href="{{ path('user_books') }}" class="btn btn-outline-primary rounded-pill">Voir mes livres</a>
            </div>
        </div>

        <!-- Infos personnelles à droite -->
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body px-5 py-4">
                    <h2 class="h5 mb-4">Vos informations personnelles</h2>
                    {{ form_start(form) }}
                        <div class="form-group mb-3">
                            {{ form_row(form.email, {'attr': {'class': 'form-control rounded-pill'}}) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_row(form.pseudo, {'attr': {'class': 'form-control rounded-pill'}}) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_row(form.phoneNumber, {'attr': {'class': 'form-control rounded-pill'}}) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_row(form.message, {'attr': {'class': 'form-control rounded-pill', 'rows': '4'}}) }}
                        </div>
                        <button class="btn btn-success w-100 rounded-pill mt-3">Enregistrer</button>
                    {{ form_end(form) }}

                    <a href="{{ path('user_change_password') }}" class="btn btn-outline-danger w-100 rounded-pill mt-3">Changer mon mot de passe</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
