{% block main %}
<div class="container mt-4">
    <h2 class="mb-4">ðŸ’¬ Conversation avec {{ contact.pseudo ?: contact.username }}</h2>

    <div class="card shadow-sm rounded-4">
        <div class="card-body">
            {% if messages|length > 0 %}
                {% for message in messages %}
                    {% set isMine = message.isMine(app.user) %}
                    <div class="d-flex mb-3 {{ isMine ? 'justify-content-end' : 'justify-content-start' }}">
                        {% if not isMine %}
                            <img src="{{ asset(message.getSenderAvatar()) }}" class="rounded-circle me-2 shadow-sm" width="40" height="40" alt="Avatar">
                        {% endif %}

                        <div class="p-3 rounded-4 {{ isMine ? 'bg-primary text-white' : 'bg-light' }}" style="max-width: 70%;">
                            <p class="mb-1">{{ message.content }}</p>
                            <small class="text-muted">{{ message.getFormattedDate() }}</small>
                        </div>

                        {% if isMine %}
                            <img src="{{ asset(message.getSenderAvatar()) }}" class="rounded-circle ms-2 shadow-sm" width="40" height="40" alt="Avatar">
                        {% endif %}
                    </div>
                {% endfor %}
            {% else %}
                <p class="text-muted">Aucun message pour le moment.</p>
            {% endif %}
        </div>
    </div>

    <form method="POST" action="{{ path('conversation_view', {id: conversation.id}) }}" class="mt-4">
        <div class="input-group">
            <input type="text" name="content" class="form-control rounded-pill" placeholder="Ã‰cris ton messageâ€¦" required>
            <button class="btn btn-primary rounded-pill ms-2">Envoyer</button>
        </div>
    </form>
</div>

<script>
    window.scrollTo(0, document.body.scrollHeight);
    document.querySelector('form')?.addEventListener('submit', () => {
        if (navigator.vibrate) navigator.vibrate(50);
    });
</script>
{% endblock %}
