{% block main %}
<div class="container-fluid register-background py-5">
    <div class="row justify-content-center align-items-center min-vh-100">
        <!-- Image à gauche -->
        <div class="col-lg-6 d-none d-lg-block text-center">
            <img src="{{ asset('images/bookshelf.jpg') }}" alt="Étagère de livres" class="img-fluid rounded-4 shadow-lg" style="max-height: 500px;">
        </div>

        <!-- Formulaire à droite -->
        <div class="col-lg-5 col-md-8">
            <div class="register-wrapper bg-white shadow-lg rounded-4 p-4">
                <div class="text-center mb-4">
                    <img src="{{ asset('images/logo-tomtroc.svg') }}" alt="Logo TomTroc" height="48" class="mb-2">
                    <h2 class="h4 fw-semibold">Créer un compte TomTroc</h2>
                </div>

                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {{ form_start(registrationForm) }}
                    <div class="mb-3">
                        {{ form_row(registrationForm.username, {'label': 'Nom d’utilisateur'}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.plainPassword, {'label': 'Mot de passe'}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.agreeTerms, {'label': 'J’accepte les conditions'}) }}
                    </div>

                    <button type="submit" class="btn btn-success w-100 rounded-pill">S’inscrire</button>
                {{ form_end(registrationForm) }}

                <p class="text-center mt-3">
                    <a href="{{ path('app_login') }}" class="text-decoration-none">Déjà inscrit ? Connectez-vous</a>
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
